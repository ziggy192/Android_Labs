<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nghia.lab_0102.OptionActivity">

    <TextView
        android:id="@+id/tv_choose_color_and_size"
        android:layout_centerHorizontal="true"
        android:text="Choose color and size"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/tv_choose_color_and_size"
        android:id="@+id/tv_colors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/text_size_Sizes"
        android:text="Colors"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_colors"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_colors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/dark_blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/light_blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/orange" />
    </LinearLayout>
    <TextView
        android:text="Sizes"
        android:id="@+id/tv_sizes"
        android:textSize="@dimen/text_size_Sizes"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_colors"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_sizes"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_sizes"
        android:layout_width="200dp"
        android:layout_height="50dp">


        <TextView
            android:textColor="@color/colorOrange"
            android:text="S"
            android:textSize="@dimen/text_size_Sizes"
            android:gravity="center"
            android:layout_below="@id/tv_sizes"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:background="@drawable/orange"
            android:textColor="@color/colorWhite"
            android:text="M"
            android:textSize="@dimen/text_size_Sizes"
            android:gravity="center"
            android:layout_below="@id/tv_sizes"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/colorOrange"
            android:text="L"
            android:textSize="@dimen/text_size_Sizes"
            android:gravity="center"
            android:layout_below="@id/tv_sizes"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/colorOrange"
            android:text="XL"
            android:textSize="@dimen/text_size_Sizes"
            android:gravity="center"
            android:layout_below="@id/tv_sizes"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_below="@id/ll_sizes"
        android:background="@color/colorOrange"
        android:text="Add to cart"
        android:textSize="@dimen/text_size_Sizes"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />




</RelativeLayout>
