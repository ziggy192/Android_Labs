<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nghia.lab_0102.HomeActivity">

    <ImageView
        android:id="@+id/iv_men_fashion"
        android:scaleType="centerCrop"
        android:src="@drawable/men_fashion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_image">
    </ImageView>
    <TextView
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="Men"
        android:textSize="@dimen/text_size_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_image" />
    <ImageView
        android:id="@+id/iv_women_fashion"
        android:src="@drawable/girl_fashion"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"

        android:layout_below="@id/iv_men_fashion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_image">
    </ImageView>
    <TextView
        android:layout_below="@id/iv_men_fashion"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="Women"
        android:textSize="@dimen/text_size_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_image" />
    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/iv_kid_fashion"
        android:src="@drawable/kids_fashion"
        android:scaleType="centerCrop"

        android:layout_below="@id/iv_women_fashion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_image">
    </ImageView>
    <TextView
        android:layout_below="@id/iv_women_fashion"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="Kid"
        android:textSize="@dimen/text_size_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_image" />


</RelativeLayout>
